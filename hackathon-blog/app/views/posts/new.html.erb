<h1 class="new-post">New post</h1>
<div class="form">
  <%=form_with model: @post, local: true do |form| %>
    <p class="textfield">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>
    <p class="textfield">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </p>
    <p class="submit">
      <%= form.submit "Submit" %>
    </p>
  <% end %>
</div>
