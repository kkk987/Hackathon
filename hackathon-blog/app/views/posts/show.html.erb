<h1 class="article-heading">Articles</h1>
<h3>Past posts:</h3>
<% @post.each do |f|%>
  <div class="post">
    <p class = "title"><%= link_to f.title, post_path(f.id) %></p>
    <p class = "description"><%= f.description %></p>
    <p class = "username"><%= User.find(f.user_id).username %></p>
  </div>
<% end %>

<h3>Past comments:</h3>
<% Comment.sort_by_user_and_time(current_user).each do |f| %>
  <div class = "comment">
    <p class = "textfield" >Comment to <%= link_to Post.find(f.post_id).title, post_path(f.post_id) %></p>
    <p class = "textfield">Comment on <%= f.updated_at.to_date%></p>
    <p class = "textfield"><%= f.comments %></p>
  </div>
<% end %>
